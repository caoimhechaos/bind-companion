options {
	directory "/etc/bind";
	dnssec-validation auto;
	auth-nxdomain no;
	listen-on-v6 port 5353 { any; };
	allow-transfer { none; };
	allow-recursion { none; };
	recursion no;
	additional-from-auth no;
	additional-from-cache no;
};
{{- with $bindconfig := . }}
{{ range $zone := .Domain }}

zone "{{ $zone.Name }}" IN {
{{- if eq $zone.Type 0 }}
	type master;
	file "git/masterzones/{{ $zone.Name }}.db";

	allow-transfer {
{{- range $address := $bindconfig.AllowTransfer }}
		{{ $address }};
{{- end }}
	};
	also-notify {
{{- range $address := $bindconfig.AllowTransfer }}
		{{ $address }};
{{- end }}
	};
{{ else if eq $zone.Type 1 }}
	type slave;
	file "slavezones/{{ $zone.Name }}.db";

	masters {
		{{ $zone.Master }};
	};
	allow-notify {
		{{ $zone.Master }};
{{- range $address := $bindconfig.AllowTransfer }}
		{{ $address }};
{{- end }}
	};
{{ else }}
	type forward;

	forwarders {
		{{ $zone.Master }};
	};
{{ end }}
};
{{ end }}
{{ end }}
